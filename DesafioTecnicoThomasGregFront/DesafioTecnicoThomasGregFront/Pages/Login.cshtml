@page "/"
@model LoginModel
<div class="text-center">

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="author" content="Yinka Enoch Adedokun">
	<p>		
	<title>Login Page</title>
	</head>
	<body>
		<!-- Main Content -->
		<div class="container-fluid">
			<div class="row main-content bg-success text-center">
				<div class="col-md-4 text-center company__info">
					<span class="company__logo">
						<h2>
							<img src="https://thomasgregandsons.com/wp-content/uploads/2020/04/logo-3.png" alt="Minha Figura">
							<h4 class="company_title">Thomas Greg do Brasil</h4>
				</div>
				<div class="col-md-8 col-xs-12 col-sm-12 login_form ">
					<div class="container-fluid">
						<div class="row">
							<h2>Log In</h2>
						</div>
						<div class="row">
							<form class="form-group" method="post">
								@if (!string.IsNullOrEmpty(Model.ErrorMessage))
								{
									<div class="alert alert-danger" role="alert">
										@Model.ErrorMessage
									</div>
								}
								<div class="row">
									<input type="email" asp-for="Username" name="username" id="username" class="form__input" placeholder="Email">
								</div>
								<div class="row">
									<!-- <span class="fa fa-lock"></span> -->
									<input type="password" asp-for="Password" name="password" id="password" class="form__input" placeholder="Password">
								</div>								
								<div class="row">
									<input type="submit" value="Salvar" class="btn">
								</div>
							</form>
						</div>
						<div class="row">
							<p>Ainda não tem uma conta? <a asp-page="/Register">Registre-se Aqui</a></p>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Footer -->
	</body>
</div>

									